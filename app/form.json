{
    "attributes": {
        "id": "frm-contact",
        "class": "contact-form",
        "accept-charset": "utf-8",
        "novalidate":"novalidate"
    },
    "fields": [
        {
            "id": "contact-name",
            "name": "name",
            "label": "Your name",
            "placeholder": "eg. John Appleseed",
            "class": "u-full-width",
            "required": true,
            "error": "Your name is a required field"
        },
        {
            "id": "contact-company",
            "name": "company",
            "label": "Company",
            "class": "u-full-width",
            "placeholder": "eg. ACME Ltd"
        },
        {
            "id": "contact-email",
            "name": "email",
            "label": "Email address",
            "placeholder": "eg. john@acme.com",
            "type": "email",
            "class": "u-full-width",
            "required": true
        },
        {
            "id": "contact-phone",
            "name": "phone",
            "label": "Phone number",
            "placeholder": "eg. +44 (0) 123 456 7890",
            "class": "u-full-width",
            "type": "tel"
        },
        {
            "id": "message-subject",
            "name": "subject",
            "label": "Subject",
            "placeholder": "eg. Hello Guys",
            "class": "u-full-width",
            "required": true
        },
        {
            "id": "message-text",
            "name": "message",
            "label": "Your message",
            "type": "textarea",
            "rows": 6,
            "cols": 32,
            "class": "u-full-width",
            "required": true
        },
        {
            "id": "privacy",
            "name": "privacy",
            "label": "I agree to ACME [privacy policy](/privacy) and [terms of service](/terms)",
            "type": "checkbox",
            "required": true,
            "error": "Agreement to our policies is required"
        },
        {
            "id":"referral",
            "name":"referral",
            "type":"select",
            "label": "How did you hear of us?",
            "options": [
                {"friends": "Friends"},
                {"clients": "Clients"},
                {"other": "Other"}
            ],
            "class": "u-full-width",
            "error": "The chosen option is not valid"
        },
        {
            "id": "client-type",
            "name": "client-type",
            "type": "radio",
            "required": true,
            "label": "Which client type are you?",
            "error": "Please, choose a valid option",
            "options": [
                {
                    "id": "client-type-business",
                    "value": "business",
                    "label": "I'm a Business owner"
                },
                {
                    "id": "client-type-consumer",
                    "value": "consumer",
                    "label": "I'm a Consumer"
                }
            ]
        },
        {
            "id": "contact-submit",
            "name": "saveForm",
            "type": "submit",
            "value": "Send message",
            "class": "button-primary",
            "save": false
        }
    ]
}
